{
  "name": "discord-bot",
  "type": "module",
  "workspaces": [
    "bot",
    "web"
  ],
  "private": true,
  "scripts": {
    "dev:docker": "docker compose -f ./compose.dev.yml up -d",
    "dev": "bun run dev:bot & bun run dev:web",
    "dev:bot": "bun run ./bot/index.ts --hot",
    "dev:web": "cd web; bun --env-file=../.env run dev",
    "bot:update": "bun run ./bot/scripts/update.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "cd database; bun run seed",
    "clean:all": "rm -rf dist node_modules",
    "typecheck": "bun run typecheck:bot && bun run typecheck:web && bun run typecheck:database",
    "typecheck:bot": "cd bot; tsc --noEmit",
    "typecheck:web": "cd web; tsc --noEmit",
    "typecheck:database": "cd database; tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "eslint-plugin-svelte": "^3.11.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
